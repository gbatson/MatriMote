<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/blue_grey_dark</item>
        <item name="android:actionBarStyle">@style/MaterialActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_up</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:listPopupWindowStyle">@style/PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ListView.DropDown</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
    </style>

    <style name="ActionButton.Overflow" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="MaterialActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MaterialActionBarTitleText</item>
        <item name="android:textViewStyle">@style/MaterialActionBarMenuTextAppearance</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/indigo</item>
    </style>

    <style name="MaterialActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialActionBarMenuTextAppearance" parent="android:Widget.Holo.Light.TextView">
        <item name="android:fontFamily">Quantum Mechanics</item>
    </style>

    <style name="ListView.DropDown" parent="android:Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="TextAppearance.LargePopupMenu" parent="android:TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.PopupMenu">
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TouchpadIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- Style for the buttons on the end of the zoom bar -->
    <style name="ZoomButton">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
